# watchwho:	watch who logs in and out

PATH=/bin:/usr/bin
new=/tmp/wwho1.$$
old=/tmp/wwho2.$$
>$old           # create an empty file

trap 'rm -f $new $old; exit 1' 1 2 15

while :         # loop forever
do
    who >$new
    diff $old $new
    mv $new $old
    sleep 60
done | awk '/>/ { $1 = "in:     "; print }
            /</ { $1 = "out:    "; print }'

